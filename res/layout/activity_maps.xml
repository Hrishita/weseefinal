<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    tools:context=".MapsActivity"
    android:id="@+id/view_id_touch"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weseelg"></ImageView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:fontFamily="@font/proxima"
            android:text="We See"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_marginTop="160dp"
        android:id="@+id/linearLayout">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:id="@+id/TF_location"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:hint="Search Places here"
        android:layout_weight="1.01"
        android:layout_toStartOf="@+id/B_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/B_search"
        android:text="Search"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttongradient"
        android:onClick="onClick"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/TF_location"/>

</LinearLayout>

<fragment
    android:layout_height="450dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:layout_alignParentStart="true"
    tools:context="com.example.priyanka.mapsnearbyplaces.MapsActivity"
    android:layout_alignParentBottom="true"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    xmlns:tools="http://schemas.android.com/tools"
 />
<LinearLayout
    android:layout_height="wrap_content"

    android:layout_width="match_parent">
</LinearLayout>


    </RelativeLayout>